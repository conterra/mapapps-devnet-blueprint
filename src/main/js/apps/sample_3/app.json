{
  "properties": {
    "title": "${apptitle}",
    "amdPackages": "apprt@^3.x"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system@3.x",
      "splashscreen@3.x",
      "map@3.x",
      "themes@3.x",
      "templates@3.x",
      "templatelayout@3.x",
      "windowmanager@3.x",
      "toolset@3.x",
      "toolrules@3.x",
      "basemaptoggler@3.x",
      "banner@3.x"
    ],
    "skipBundles": [],
    "require": [
      "${app}.app"
    ],
    "i18n": [
      "bundle"
    ]
  },
  "bundles": {
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://conterra.de/themes/conterra/logo.svg",
        "imagePosition": "above",
        "link": "http://developernetwork.conterra.de"
      }
    },
    "map": {
      "MapState": {
        "initialExtent": {
          "xmin": -1100000,
          "ymin": 4000000,
          "xmax": 3500000,
          "ymax": 8800000,
          "spatialReference": {
            "wkid": 3857
          }
        }
      },
      "MapModelFactory": {
        "_configData": {
          "maps": [
            {
              "id": "default",
              "glass_pane": [],
              "operationalLayer": [
                {
                  "title": "Standorte",
                  "enabled": true,
                  "service": "standorte",
                  "category": {
                    "title": "Standorte",
                    "description": "",
                    "imgUrl": ""
                  },
                  "layers": [
                    "*"
                  ],
                  "id": "standorte0",
                  "options": {}
                }
              ],
              "baseLayer": [
                {
                  "title": "${service.streets}",
                  "service": "streets",
                  "enabled": true
                },
                {
                  "title": "${service.topo}",
                  "service": "worldTopo",
                  "enabled": false
                }
              ]
            }
          ]
        }
      },
      "MappingResourceRegistryFactory": {
        "_knownServices": {
          "services": [
            {
              "id": "worldTopo",
              "type": "AGS_TILED",
              "url": "https://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer"
            },
            {
              "id": "streets",
              "type": "AGS_TILED",
              "url": "https://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer"
            },
            {
              "id": "standorte",
              "url": "https://services.conterra.de/arcgis/rest/services/common/standorte/FeatureServer",
              "type": "AGS_FEATURE",
              "title": "Standorte",
              "description": "",
              "layers": [
                {
                  "id": "0",
                  "title": "Standorte",
                  "enabled": true
                }
              ],
              "options": {}
            }
          ]
        }
      }
    }
  }
}
