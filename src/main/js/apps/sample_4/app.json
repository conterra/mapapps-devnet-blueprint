{
  "properties": {
    "title": "${apptitle}",
    "amdPackages": "apprt@4.x"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system@4.x",
      "appsoverview@4.x",
      "banner@4.x",
      "basemaptoggler@4.x",
      "console@4.x",
      "coordinateviewer@4.x",
      "languagetoggler@4.x",
      "legend@4.x",
      "notifier@4.x",
      "parametermanager@4.x",
      "splashscreen@4.x",
      "templatelayout@4.x",
      "template-seasons@4.x",
      "theme-everlasting@4.x",
      "theme-winter@4.x",
      "theme-spring@4.x",
      "theme-summer@4.x",
      "theme-autumn@4.x",
      "map-init@4.x",
      "map-preload-2D@4.x",
      "map-preload-3D@4.x",
      "toolset@4.x",
      "viewmodeswitcher@4.x"
    ],
    "require": [
      "${app}.app"
    ],
    "i18n": [
      "bundle"
    ]
  },
  "bundles": {
    "appsoverview": {
      "RedirectToApp": {
        "openWindow": false
      }
    },
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://conterra.de/themes/conterra/logo.svg",
        "imagePosition": "above",
        "link": "http://developernetwork.conterra.de"
      }
    },
    "basemaptoggler": {
      "Config": {
        "nextBasemap": "hybrid"
      }
    },
    "coordinateviewer": {
      "Config": {
        "decimalPlaces": 3,
        "showScale": true,
        "showCoordinates": true,
        "degreeFormat": true,
        "transformSrs": true,
        "targetSrs": "WGS84"
      }
    },
    "map-init": {
      "Config": {
        "map": {
          "layers": [
            {
              "id": "esri_group_sites",
              "title": "${map.esrisites.title}",
              "portalItem": {
                "id": "d0e2a965dd2e4f24b33495a4c2475bed"
              },
              "type": "AGS_FEATURE",
              "elevationInfo": {
                "mode": "on-the-ground"
              },
              "layerId": 0,
              "visible": true,
              "popupEnabled": true,
              "outFields": [
                "*"
              ],
              "popupTemplate": {
                "title": "{name2}",
                "content": "<div><font size=\"4\">{name3}</font></div><div><hr /></div><h2>${map.esrisites.popup.address}</h2><div><font size=\"2\">{street}<br /></font></div><div><font size=\"2\">{plz_city}</font></div><div><h2>${map.esrisites.popup.contact}</h2></div><div><font size=\"2\">${map.esrisites.popup.tel} <a href=\"tel:{tel}\">{tel}</a></font></div><div><font size=\"2\">${map.esrisites.popup.mail} <a href=\"mailto:{email}\">{email}</a></font></div><div><font size=\"2\">${map.esrisites.popup.link} <a href=\"{link}\" target=\"_blank\">{link}</a></font></div>"
              }
            }
          ],
          "basemap": "streets",
          "ground": {
            "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
            "type": "ELEVATION"
          }
        },
        "view": {
          "viewmode": "2D",
          "extent": {
            "xmin": 600000,
            "ymin": 5800000,
            "xmax": 1700000,
            "ymax": 7600000,
            "spatialReference": 3857
          }
        }
      }
    },
    "themes": {
      "ThemeModel": {
        "_selectedTheme": "everlasting"
      },
      "ThemeSelector": {
        "componentEnabled": true
      }
    },
    "toolset": {
      "ToolsetManager": {
        "toolsets": [
          {
            "id": "mapview_tools",
            "tools": [
              "urlEncoder",
              "appsOverviewToggleTool",
              "viewmodeSwitcherTool",
              "IMPRINT_Imprint_CustomInfoTool",
              "IMPRINT_Imprint_CustomInfoTool_mobile"
            ],
            "container": "map",
            "max_horizontal": 1,
            "windowType": "css_positioned",
            "cssClass": "notitle muted mapview_tools",
            "deactivateToolsOnHide": true
          }
        ]
      }
    },
    "toolrules": {
      "ToolRuleManager": {
        "_rules": {
          "viewmodeSwitcherTool": {
            "ruleSuccessProperty": "visibility",
            "not": {
              "subLayoutNames": [
                "mobile_portrait",
                "mobile_landscape",
                "tablet_portrait",
                "tablet_landscape"
              ]
            }
          },
          "IMPRINT_Imprint_CustomInfoTool": {
            "ruleSuccessProperty": "visibility",
            "not": {
              "subLayoutNames": [
                "mobile_portrait",
                "mobile_landscape",
                "tablet_portrait",
                "tablet_landscape"
              ]
            }
          },
          "IMPRINT_Imprint_CustomInfoTool_mobile": {
            "ruleSuccessProperty": "visibility",
            "not": {
              "subLayoutNames": [
                "desktop"
              ]
            }
          }
        }
      }
    }
  }
}
